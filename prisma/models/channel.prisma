// 渠道表
model Channel {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255) // 渠道名称
  code        String   @db.VarChar(50) // 渠道编码
  description String?  @db.Text // 渠道描述
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz

  // 关联关系
  orders Order[] // 渠道的订单

  @@index([code])
  @@map("channels")
}
